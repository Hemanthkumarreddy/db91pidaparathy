extends layout

block content
 h1= title
 - let tshirt = results;
 div(class="container-fluid")
  div(class="row m-1")
   each item in tshirt
      - let destination = `dispatch(\"/tshirt/update?id=${item._id}\")`
      div(class="row-sm-2", class="m-1") Item #{item.color}(#{item.brand}) is #{item.price}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
      
 script.
  function dispatch(path){
    window.location.href=path
  }